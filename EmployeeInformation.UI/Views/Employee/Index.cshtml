@model IEnumerable<EmployeeInformation.UI.Models.EmployeeViewModel>
<script src="~/Scripts/AppScripts/Employee.js"></script>
@{
    ViewBag.Title = "Employee Information";
}

<h2>Employee Information</h2>

<b>
    Search by Employee ID /b>
    @Html.TextBox("search")
    <input type="submit" id="btnSearch" value=" Search" />
    <div>
        <table border="1">
            <tr>
                <th>
                    @Html.DisplayText("Employee ID")
                </th>
                <th>
                    @Html.DisplayText("First Name")
                </th>
                <th>
                    @Html.DisplayText("Last Name")
                </th>
                <th>
                    @Html.DisplayText("Contract Type")
                </th>
                <th> @Html.DisplayText("Annual Salary")</th>
            </tr>

            @if (Model.Count() == 0)
            {

                <tr>
                    <td colspan="5">
                        No record found
                    </td>
                </tr>



            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContractType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Salary)
                        </td>
                    </tr>

                }
            }

        </table>
    </div>
