@model IEnumerable<EmployeeInformation.UI.Models.EmployeeViewModel>
@{
    ViewBag.Title = "Employee Information";
}
<link href="~/Content/Site.css" rel="stylesheet" />
<h1></h1>
<br></br>
<div>


 @using (Html.BeginForm("getEmployee", "Employee",FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <b>
            Search by Employee ID
        </b>
        @Html.TextBox("search")

        <input type="submit" name="submit" value="Search" />
    }
</div>
<br></br>
@if (Model.Count() > 0)
{
    <div>
        <table class="table table-bordered table-responsive table-hover ">
            <thead class="th">
                <tr>
                    <th>Employee ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Contract Type</th>
                    <th>Annual Salary</th>
                </tr>
            </thead>
                @if (Model.Count() == 0)
                {

                    @*<tr>
                    <td colspan="5">
                        No record found
                    </td>
                </tr>*@



                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContractType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Salary)
                            </td>
                        </tr>

                    }
                }

        </table>
    </div>
}
